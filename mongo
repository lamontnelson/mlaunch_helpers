# Starts a MongoDB shell in replica set mode
#
NODES=`cat NODES`
SHARD=${1:-1}
VERSION=`cat VERSION`
PORT=`cat PORT`
PORT=$((PORT+NODES*SHARD))
MONGODB_BIN=`m bin $VERSION`

if [ "$#" -ne 1 ]; then
	echo "usage: $0 <shard-number>"
	exit 1
fi

CMD="$MONGODB_BIN/mongo mongodb://localhost:$PORT/test?replicaSet=sh$SHARD"
echo "$CMD"
$CMD
